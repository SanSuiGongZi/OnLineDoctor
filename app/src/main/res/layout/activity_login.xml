<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.activity.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mTool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/mIv_getBack"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:scaleType="centerCrop" />

        <com.example.wayne.dentist.widget.RoutineTextView
            android:id="@+id/mTv_switchover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="@color/c_111111"
            android:textSize="@dimen/dp_15" />

    </android.support.v7.widget.Toolbar>

    <com.example.wayne.dentist.widget.RoutineTextView
        android:id="@+id/mTv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTool"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_55"
        android:gravity="center"
        android:text="@string/login_hostital"
        android:textColor="@color/c_111111"
        android:textSize="@dimen/dp_20" />

    <LinearLayout
        android:id="@+id/isLogin_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTv_login"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_23"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/phone_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/_86"
                android:textColor="@color/c_4A4A4A"
                android:textSize="@dimen/dp_15" />

            <EditText
                android:id="@+id/mEt_phone"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="3"
                android:background="@null"
                android:hint="@string/setPhone"
                android:inputType="phone"
                android:maxLength="11"
                android:paddingLeft="@dimen/dp_15"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/mTv_getCode"
                android:text="@string/setcode"
                android:textSize="@dimen/dp_14"
                android:gravity="center"
                android:textColor="@color/c_CBCBCB"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mll_Code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_23"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/phone_shape"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/mEt_phoneCode"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="4"
                android:background="@null"
                android:maxLength="6"
                android:paddingLeft="@dimen/dp_15"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/c_4A4A4A"
                android:textSize="@dimen/dp_15" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/hint"
            android:textSize="@dimen/dp_12" />

        <Button
            android:id="@+id/mBt_phoneEnter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/button_shape"
            android:enabled="false"
            android:text="@string/logon"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/isLogin_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTv_login"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/mEt_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:background="@drawable/phone_shape"
            android:hint="@string/setAccount"
            android:paddingLeft="@dimen/dp_15"
            android:textSize="@dimen/dp_12" />

        <EditText
            android:id="@+id/mEt_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/phone_shape"
            android:hint="@string/setPassWord"
            android:paddingLeft="@dimen/dp_15"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/mTV_retrievePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:text="@string/retrievePassword"
            android:textColor="@color/c_1DB5FF"
            android:textSize="@dimen/dp_12" />

        <Button
            android:id="@+id/mBt_accountEnter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:layout_marginTop="@dimen/dp_17"
            android:background="@drawable/button_shapelogin"
            android:text="@string/logon"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15" />

    </LinearLayout>

    <TextView
        android:id="@+id/mTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTv_login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_356"
        android:gravity="center"
        android:text="@string/elseLogin"
        android:textColor="@color/c_4A4A4A"
        android:textSize="@dimen/dp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mTv"
        android:layout_marginTop="@dimen/dp_26"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mIv_weChat"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_marginRight="@dimen/dp_35" />

        <ImageView
            android:id="@+id/mIv_QQ"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_marginRight="@dimen/dp_35" />

        <ImageView
            android:id="@+id/mIv_microblog"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_15"
        android:gravity="center"
        android:text="@string/agreement"
        android:textColor="@color/c_9B9B9B"
        android:textSize="@dimen/dp_11" />

</RelativeLayout>