<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mTool"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_51"
        android:background="@color/white">

        <SearchView
            android:id="@+id/mSearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/redio_shape"
            android:iconifiedByDefault="true" />

        <RelativeLayout
            android:id="@+id/mRl_Toll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_27"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="@string/TollName"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_16" />

            <ImageView
                android:id="@+id/mIv_photo"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/fl_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/lin"
        android:layout_below="@id/mTool" />

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:clipChildren="false"
        android:gravity="bottom"
        android:orientation="horizontal">

        <android.support.design.widget.TabLayout
            android:id="@+id/mTab"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            app:tabIndicatorHeight="@dimen/dp_0" />

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_22"
            android:background="@drawable/brank_shape"
            android:scaleType="centerCrop"
            android:src="@mipmap/extend" />

    </LinearLayout>

</RelativeLayout>